@model RS1_Ispit_asp.net_core.ViewModels.TakmicenjeDodajUcesnikaVM
@{
    ViewData["Title"] = "UrediPV";
}


<form method="post" asp-action="DodajUcesnikaPV" ajax-poziv="da" ajax-rezultat="ajaxDiv">
    <div class="form-group">
        <input style="visibility: hidden" class="form-control" asp-for="@Model.TakmicenjeId"/>
    </div>
    <div class="form-group">
        <label class="control-label">Ucesnik:  </label>
        <select asp-for="@Model.OdjeljenjeStavkaId" asp-items="@Model.UceniciList" class="form-control"></select>
    </div>
    <div class="form-group">
        <label class="control-label">Bodovi: </label>
        <input type="number" asp-for="@Model.Bodovi"class="form-control" placeholder="@Model.Bodovi"/>
    </div>
    <div class="form-group">
        <input type="submit" value="Snimi" class="btn btn-default"/>
    </div>
</form>
