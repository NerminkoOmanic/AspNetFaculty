@model RS1_Ispit_asp.net_core.ViewModels.TakmicenjeDodajVM

@{
    ViewData["Title"] = "Dodaj";
}

<h2>Dodavanje takmicenja </h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <h3>Skola domacin: @Model.SkolaDomacin</h3>
        <form method="post">
            <div class="form-group">
                <input style="visibility: hidden" class="form-control" asp-for="@Model.SkolaId"/>
            </div>
            <div class="form-group">
                <label class="control-label">Odaberite predmet: </label>
                <select asp-for="@Model.Predmet" asp-items="Model.PredmetiList" class="form-control"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Odaberite razred: </label>
                <select asp-for="@Model.Razred" asp-items="Model.RazrediList" class="form-control"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Datum: </label>
                <input type="date" asp-for="@Model.Datum" class="form-control" />
                <span asp-validation-for="Datum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-default"/>
            </div>
        </form>
    </div>
</div>



