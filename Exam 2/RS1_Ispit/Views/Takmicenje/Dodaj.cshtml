@model RS1_Ispit_asp.net_core.ViewModels.TakDodajVM

@{
    ViewData["Title"] = "Dodaj";
}

<h2>Dodaj takmicenje</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Dodaj" method="post">
            <div class="form-group">
                <label class="control-label"> Skola domacin: @Model.SkolaDomacin</label>
                <input style="visibility: hidden" class="form-control" asp-for="@Model.SkolaID" />
            </div>
            <div class="form-group">
                <label class="control-label">Predmet: </label>
                <select asp-for="Predmet" asp-items="@Model.PredmetiList" class="form-control"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Razred: </label>
                <select asp-for="Razred" asp-items="@Model.RazrediList" class="form-control"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Datum: </label>
                <input type="date" asp-for="Datum" class="form-control">
            </div>
            <div class="form-group">
                <input type="submit" value="Odaberi" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>


