@model RS1_Ispit_asp.net_core.ViewModels.TakDodajUcesnikaVM

@{
    ViewData["Title"] = "DodajUcesnikaPV";
}

<h2>Dodaj ucesnika</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="DodajUcesnikPV" method="post">
            <div class="form-group">
                <input  value="@Model.TakmicenjeID" asp-for="TakmicenjeID"/>
                <label class="control-label"> Ucesnik : </label>
                <select class="form-control" asp-for="@Model.OdjeljenjeStavkaID" asp-items="@Model.ListaUcenika"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Bodovi: </label>
                <input class="form-control" asp-for="@Model.Bodovi" />
            </div>
            <div class="form-group">
                <input type="submit" value="Snimi" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>