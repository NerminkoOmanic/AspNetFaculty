@model RS1_Ispit_asp.net_core.ViewModels.TakUcesnikUrediVM

@{
    ViewData["Title"] = "UrediUcesnika";
}

<h2>Dodaj takmicenje</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UrediUcesnika" method="post">
            <div class="form-group">
                <label class="control-label"> Ucesnik : @Model.NazivUcesnika</label>
                <input hidden="hidden" asp-for="UcesnikID" value="@Model.UcesnikID"/>
            </div>
            <div class="form-group">
                <label class="control-label">Bodovi: </label>
                <input class="form-control" asp-for="@Model.Bodovi" />
            </div>
            <div class="form-group">
                <input type="submit" value="Odaberi" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>


